{
  "name": "ai-vault",
  "version": "1.0.0",
  "description": "Own your data. Open-source CLI tool for automated archival of AI conversations across ChatGPT, Claude, Grok, Gemini, and more.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-vault": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\" \"*.yml\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.md\" \"*.json\" \"*.yml\"",
    "test": "echo \"Tests coming soon\" && exit 0",
    "test:watch": "echo \"Tests coming soon\" && exit 0",
    "prepare": "husky",
    "release": "semantic-release"
  },
  "keywords": [
    "ai",
    "vault",
    "data-ownership",
    "archiver",
    "backup",
    "automation",
    "privacy",
    "local-first",
    "chatgpt",
    "claude",
    "grok",
    "gemini",
    "open-source"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "axios": "^1.7.9",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.2",
    "filenamify": "^6.0.0",
    "node-cron": "^3.0.3",
    "ora": "^8.1.1",
    "playwright": "^1.49.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "eslint": "^9.38.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
