{
  "name": "ai-vault",
  "version": "1.3.0",
  "description": "Own your data. Open-source CLI tool for comprehensive archival of AI interactions—conversations, images, videos, code artifacts, and metadata—across ChatGPT, Claude, Grok, Gemini, and more.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "ai-vault": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dotCipher/ai-vault.git"
  },
  "bugs": {
    "url": "https://github.com/dotCipher/ai-vault/issues"
  },
  "homepage": "https://github.com/dotCipher/ai-vault#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"*.md\" \"*.json\" \"*.yml\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"*.md\" \"*.json\" \"*.yml\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "postinstall": "playwright install chromium --with-deps || echo 'Note: Run pnpm exec playwright install chromium if browser installation failed'",
    "prepublishOnly": "pnpm run build",
    "release": "semantic-release"
  },
  "keywords": [
    "ai",
    "vault",
    "data-ownership",
    "archiver",
    "backup",
    "automation",
    "privacy",
    "local-first",
    "chatgpt",
    "claude",
    "grok",
    "gemini",
    "open-source"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "axios": "^1.7.9",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.2",
    "filenamify": "^6.0.0",
    "node-cron": "^3.0.3",
    "ora": "^8.1.1",
    "playwright": "^1.49.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/sinon": "^17.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "sinon": "^21.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^4.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
